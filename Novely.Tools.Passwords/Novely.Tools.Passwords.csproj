<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageId>Novely.Tools.Passwords</PackageId>
	<Version>8.0.0</Version>
	<Authors>Mathias Hue</Authors>
	<Company>Novely</Company>
	<Description>Outil permettant la vérification et la validation des mots de passe.</Description>
	<PackageTags>password;validation</PackageTags>
	<RepositoryUrl>https://github.com/HueMathias/Novely.Tools.Passwords</RepositoryUrl>
	<PackageOutputPath>publish</PackageOutputPath>
	<PackageLicenseFile>assets\LICENSE.txt</PackageLicenseFile>
	<PackageIcon>assets\icon.png</PackageIcon>
	<PackageReadmeFile>assets\README.md</PackageReadmeFile>
  </PropertyGroup>

	<ItemGroup>
		<None Update="assets\LICENSE.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="assets\icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="assets\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>
